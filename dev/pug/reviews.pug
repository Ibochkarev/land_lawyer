block variables
  - var title = 'Отзывы'
  - var pageClass = 'reviews'

block content

  section#reviews-content
    .container
      .row
        .reviews-content
          h2 Отзывы наших клиентов
          .reviews-block
            .reviews-block-header
            .reviews-block-content
              .row
                .col-md-3.col-sm-4.col-12  1221
                .col-md-5.col-sm-4.col-12 dsdsd
